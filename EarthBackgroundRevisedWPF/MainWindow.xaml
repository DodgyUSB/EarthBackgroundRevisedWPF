<Window x:Class="EarthBackgroundRevisedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EarthBackgroundRevisedWPF"
        mc:Ignorable="d"
        Title="Earth Background Settigns" Height="150" Width="300" ResizeMode="NoResize" Visibility="Visible" ShowInTaskbar="False">
    <Grid>
        <TextBox x:Name="SavePathInputTextBox" MinWidth="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0"/>
        <Button x:Name="BrowseBtn" Content="Browse" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,20,0,0" Click="BrowseBtn_Click"/>
        <Label Margin="15,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">Resolution</Label>
        <ComboBox x:Name="ResSelectionComboBox" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0" SelectionChanged="ResSelectionComboBox_SelectionChanged"/>
        <CheckBox x:Name="StartOnBootCheckBox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,75,10,0" Checked="StartOnBootCheckBox_Checked" Unchecked="StartOnBootCheckBox_Unchecked">Start on Boot</CheckBox>
    </Grid>
</Window>
