<Window x:Class="EarthBackgroundRevisedWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EarthBackgroundRevisedWPF"
        mc:Ignorable="d"
        Title="Earth Background Settigns" Height="148.4" Width="384.8" ResizeMode="NoResize" Visibility="visible" ShowInTaskbar="False">
    <Grid>
        <TextBox x:Name="SavePathInputTextBox" MinWidth="200" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,0,0" Width="288"/>
        <Button x:Name="BrowseBtn" Content="Browse" Width="60" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="308,20,0,0" Click="BrowseBtn_Click"/>
        <Label Margin="15,50,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Content="Resolution"/>
        <ComboBox x:Name="ResSelectionComboBox" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,70,0,0" SelectionChanged="ResSelectionComboBox_SelectionChanged"/>
        <CheckBox x:Name="StartOnBootCheckBox" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,75,10,0" Checked="StartOnBootCheckBox_Checked" Unchecked="StartOnBootCheckBox_Unchecked">Start on Boot</CheckBox>
        <StatusBar HorizontalAlignment="Stretch" Height="20" VerticalAlignment="Bottom" Width="auto">
            <StatusBarItem Margin="0,0,0,0">
                <TextBlock Text="Next update:" Margin="0,0,0,0"/>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="StatusBarUpdateTime"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>Status:</TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="statusBarStatusTextBlock"/>
            </StatusBarItem>
            <StatusBarItem VerticalAlignment="Stretch" HorizontalAlignment="Right">
                <ProgressBar x:Name="statusBarUpdateProgressBar" Value="0" HorizontalAlignment="Right"  Height="12" Width="80"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
